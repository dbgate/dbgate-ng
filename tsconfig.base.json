{
  "compilerOptions": {
    "rootDir": "${configDir}/src",
    "outDir": "${configDir}/dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "downlevelIteration": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "composite": true,
    "types": ["node"]
},
  "include": ["${configDir}/src/**/*"],
  "exclude": ["${configDir}/node_modules", "${configDir}/dist", "${configDir}**/*.test.ts", "${configDir}**/*.spec.ts"]
}
